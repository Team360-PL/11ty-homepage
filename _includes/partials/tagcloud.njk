<ul class="cloud" role="navigation" aria-label="tag cloud" data-show-value>
  {% for tag, count in collections.tagList %}
    {% set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}

    {% if count < 40 %}
      {% set weight = count // 2 + 1 %}
    {% endif %}
    {% if count > 39 %}
      {% set weight = 20 %}
    {% endif %}
    {% set fontSize %}calc({{weight}} * 0.15rem + var(--font-size-smallest)){% endset %}
    <li>
      <a href="{{ tagUrl | url }}" data-count="{{count}}" 
        style="font-size: {{fontSize}};" class="post-tag">{{ tag }}</a>
    </li>
  {% endfor %}
</ul>