---
layout: layouts/base.njk
templateClass: home
---
{% block scripts%}
<script src="https://cdn.jsdelivr.net/gh/dixonandmoe/rellax@master/rellax.min.js"></script>
{% endblock %}
<header>
    {% include "partials/menu.njk" %}
</header>
<div class="banner" data-rellax-zindex="1" data-rellax-speed="-7">
    <div>
        <div>
            <h1>Editions with Future</h1>
            <h2>Rooted in standards, built by a community, meant to last</h2>
        </div>
    </div>
</div>
<main class="container {{ templateClass }}">
    {{ content | safe }}
</main>

<footer></footer>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const main = document.querySelector('.banner');
        const observer = new IntersectionObserver((entries) => {
            if (!entries[0].isIntersecting) {
                document.body.classList.remove('banner-visible');
            } else {
                document.body.classList.add('banner-visible');
            }
        }, { threshold: 0.7 });
        observer.observe(main);

        const rellax = new Rellax('.banner');
    });
</script>
